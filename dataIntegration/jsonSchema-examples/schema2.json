{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "person",
    "description": "A person in our class",
    "type": "object",
    "properties": {
        "email": {
            "type" : "string"
        },
        "firstName": {
            "type" : "string"
        },
        "lastName": {
            "type" : "string"
        },
        "age" : {
            "type" : "integer"
        },
        "enrolled": {
            "type" : "boolean"
        },
        "avgGrade": {
            "type" : "number"
        }
    },
      "additionalProperties": false,
      "required": ["email", "firstName", "lastName", "age", "enrolled", "avgGrade"]
}


